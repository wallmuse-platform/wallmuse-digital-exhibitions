# WallMuse Player Container - Environment Configuration
# Copy this file to .env and configure with your actual values

# ==========================================
# API Configuration
# ==========================================

# Backend API base URL
REACT_APP_API_URL=https://your-api-server.com

# WebSocket server URL
REACT_APP_WS_URL=wss://your-websocket-server.com

# ==========================================
# Feature Flags
# ==========================================

# Enable debug mode (shows detailed console logs)
REACT_APP_ENABLE_DEBUG=false

# Enable development tools
REACT_APP_DEV_TOOLS=false

# ==========================================
# Theme Configuration
# ==========================================

# Default theme (wallmuse, ooo2, sharex)
REACT_APP_DEFAULT_THEME=wallmuse

# ==========================================
# WordPress Integration
# ==========================================

# WordPress site URL (if applicable)
REACT_APP_WP_URL=https://your-wordpress-site.com

# ==========================================
# Sentry Error Tracking (Optional)
# ==========================================

# Sentry DSN for error tracking
# REACT_APP_SENTRY_DSN=your-sentry-dsn-here

# Sentry environment name
# REACT_APP_SENTRY_ENV=production

# ==========================================
# Analytics (Optional)
# ==========================================

# Google Analytics tracking ID
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# ==========================================
# Service Worker
# ==========================================

# Enable service worker for offline support
REACT_APP_ENABLE_SW=true

# ==========================================
# Build Configuration
# ==========================================

# Build environment (development, staging, production)
NODE_ENV=production

# Generate source maps
GENERATE_SOURCEMAP=false
